<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".relaxation.meditation">


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/textView19"
        android:typeface="serif"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:textSize="35sp"
        android:layout_marginTop="0sp"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:text="Relax"
        android:gravity="bottom"
        android:background="@drawable/bk1"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:typeface="serif"
                android:id="@+id/textView6"
                android:layout_width="229dp"
                android:layout_height="56dp"
                android:text="Music Time"
                android:textColor="@color/green"
                android:textSize="15sp" />

            <Button

                android:id="@+id/click1"
                android:layout_width="50sp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_height="50sp"
                android:background="@drawable/spotify" />
            <Button
                android:id="@+id/click"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/pic5"
               android:layout_marginLeft="30sp" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="38sp">
        <TextView
            android:id="@+id/textView7"
            android:typeface="serif"
            android:layout_width="302dp"
            android:layout_height="66dp"
            android:layout_below="@id/textView6"
            android:text="Wanna Capture your beautiful Face"
            android:textColor="@color/Olive"
            android:textSize="15sp" />
        <Button
            android:id="@+id/button2"
            android:layout_width="55sp"
            android:layout_height="50sp"
            android:layout_marginLeft="4sp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_toRightOf="@id/textView7"
            android:background="@drawable/i8"
            tools:layout_editor_absoluteX="319sp"
            tools:layout_editor_absoluteY="392sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="38sp">

        <TextView
            android:id="@+id/textView8"
            android:typeface="serif"
            android:layout_width="299dp"
            android:layout_height="64dp"
            android:layout_below="@id/textView7"

            android:text="Videos"
            android:textColor="@color/green"

            android:textSize="15sp" />
        <Button
            android:typeface="serif"
            android:id="@+id/button3"
            android:layout_width="70sp"
            android:layout_height="33sp"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/button3"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:text="click"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="90sp">
        <Button
            android:typeface="serif"
            android:id="@+id/button"
            android:layout_width="70sp"
            android:layout_height="33dp"
            android:text="back"
            android:foreground="?attr/selectableItemBackground"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:background="@drawable/button3"
            />
        <Button
            android:id="@+id/fb"
            android:layout_width="50sp"
            android:layout_height="55sp"
            android:layout_marginLeft="70sp"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/fb" />
        <Button
            android:id="@+id/whp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="50sp"
            android:layout_height="55sp"
            android:layout_marginLeft="30sp"
            android:background="@drawable/whp" />

        <Button
            android:id="@+id/inst"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="50sp"
            android:layout_height="55sp"
            android:layout_marginLeft="30sp"
            android:background="@drawable/inst" />
    </LinearLayout>





    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fb"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="15sp"
        android:typeface="serif"
        android:layout_marginLeft="142sp"
        android:text="(LITE)" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="59sp"
            android:textSize="10sp"
            android:typeface="serif"
            android:textColor="@color/Olive"
            android:text="Apps installed in your phone will only work, hence this is to provide you a quick access to these apps " />

    </LinearLayout>
</ScrollView>