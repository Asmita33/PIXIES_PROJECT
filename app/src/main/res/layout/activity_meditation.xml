<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic1"
    tools:context=".meditation">


    <TextView
        android:id="@+id/meditationtvtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_primary_dark"
        android:text=" Relax and Enjoy"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="229dp"
        android:layout_height="56dp"
        android:layout_marginTop="150dp"
        android:text="Music Time"

        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="302dp"
        android:layout_height="66dp"
        android:layout_below="@id/textView6"
        android:layout_marginTop="50dp"
        android:text="Wanna Capture your beautiful Face"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="25dp" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="299dp"
        android:layout_height="64dp"
        android:layout_below="@id/textView7"
        android:layout_marginTop="41dp"
        android:text="Videos"
        android:textColor="@color/design_default_color_primary_dark"

        android:textSize="25sp" />
    <Button
        android:id="@+id/click1"
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:layout_marginLeft="320sp"
        android:layout_marginTop="150dp"
        android:background="@drawable/spotify"
        tools:layout_editor_absoluteX="319dp"
        tools:layout_editor_absoluteY="322dp" />
    <Button
        android:id="@+id/click"
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:layout_marginLeft="250sp"
        android:layout_marginTop="150dp"
        android:background="@drawable/pic5"
        tools:layout_editor_absoluteX="319dp"
        tools:layout_editor_absoluteY="322dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="60sp"
        android:layout_height="50sp"
        android:layout_marginLeft="4sp"

        android:layout_marginTop="270sp"
        android:layout_toRightOf="@id/textView7"
        android:background="@drawable/i8"
        tools:layout_editor_absoluteX="319sp"
        tools:layout_editor_absoluteY="392sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="70sp"
        android:layout_height="33sp"
        android:layout_marginLeft="300sp"
        android:layout_marginTop="370sp"
        android:background="@drawable/edit7"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:text="click"
        tools:layout_editor_absoluteX="319dp"
        tools:layout_editor_absoluteY="249dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="70sp"
        android:layout_height="33dp"
android:text="back"
        android:layout_marginTop="570sp"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:background="@drawable/edit7"
         />

    <Button
        android:id="@+id/fb"
        android:layout_width="50sp"
        android:layout_height="55sp"
        android:layout_marginTop="570sp"
        android:layout_marginLeft="130sp"


        android:background="@drawable/fb" />

    <Button
        android:id="@+id/whp"
        android:layout_width="50sp"
        android:layout_height="55sp"
        android:layout_marginTop="570sp"
        android:layout_marginLeft="300sp"


        android:background="@drawable/whp" />

    <Button
        android:id="@+id/inst"
        android:layout_width="50sp"
        android:layout_height="55sp"
        android:layout_marginTop="570sp"
        android:layout_marginLeft="220sp"

        android:background="@drawable/inst" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fb"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="15sp"
        android:layout_marginTop="4dp"

        android:layout_marginLeft="130sp"
        android:text="(LITE)" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_marginTop="400sp"
        android:text="App installed in your phone will only work ,hence this is to provide you a quick access to these apps " />


</RelativeLayout>