<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Speech"
    android:background="@drawable/theme8"
    >

    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="20sp"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:text="GET INSPIRED.." />

    <TextView
        android:id="@+id/video2"
        android:layout_below="@id/video"
        android:layout_marginTop="80dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:text="Inspirational Videos" />

    <TextView
        android:id="@+id/video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="150dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:text="Exercises to keep you fit"/>

    <Button
        android:id="@+id/v1"
        android:layout_width="100sp"
        android:layout_height="37sp"
        android:layout_below="@id/video"
        android:background="@drawable/edit"
        android:text="click"
        android:layout_marginLeft="100sp"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <Button
        android:id="@+id/v2"
        android:layout_width="100sp"
        android:layout_height="37sp"
        android:layout_below="@id/video2"
        android:layout_marginLeft="100sp"
        android:background="@drawable/edit"
        android:text="click"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <Button
        android:id="@+id/back"
        android:layout_width="100sp"
        android:layout_height="37sp"
        android:layout_marginLeft="300sp"
        android:layout_marginTop="500sp"
        android:background="@drawable/edit"
        android:text="Back"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="234dp"
        android:layout_height="337dp"
        app:srcCompat="@drawable/woman"
        android:layout_marginTop="350sp"
        android:layout_marginLeft="40sp"/>


</RelativeLayout>