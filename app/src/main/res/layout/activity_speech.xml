<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".relaxation.Speech"

    >

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:typeface="serif"
        android:layout_height="200sp"
        android:textSize="35sp"
        android:gravity="bottom"
        android:layout_marginTop="0sp"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:text="Videos"
        android:background="@drawable/bk1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="220sp">
        <TextView
            android:typeface="serif"
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:text="Exercises to keep you fit..."/>
        <Button
            android:typeface="serif"
            android:id="@+id/v1"
            android:layout_width="100sp"
            android:layout_height="37sp"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/button3"
            android:layout_marginLeft="30sp"
            android:text="click"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="300sp">
        <TextView
            android:typeface="serif"
            android:id="@+id/video2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:text="Inspiring Videos ..." />
        <Button
            android:id="@+id/v2"
            android:typeface="serif"
            android:layout_width="100sp"
            android:layout_height="37sp"
            android:background="@drawable/button3"
            android:foreground="?attr/selectableItemBackground"
            android:text="click"
            android:layout_marginLeft="30sp"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />
    </LinearLayout>

    <Button
        android:id="@+id/back"
        android:typeface="serif"
        android:layout_width="100sp"
        android:layout_height="37sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="630sp"
        android:background="@drawable/button3"
        android:foreground="?attr/selectableItemBackground"
        android:text="Back"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="329dp"
        android:layout_height="319dp"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="350sp"
        app:srcCompat="@drawable/woman" />


</RelativeLayout>