<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exercisevideo"
    android:background="@drawable/extheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/back1"
            android:layout_width="90sp"
            android:background="@drawable/edit3"
            android:layout_height="35sp"
            android:text="Back" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/design_default_color_primary_dark"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="@string/constantly_challenge_yourself" />

        <WebView
            android:layout_width="2sp"
            android:layout_height="2sp"
            android:id="@+id/wv"
            tools:ignore="WebViewLayout" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:textSize="18sp"
            android:text="For Beginners-Its never too late!!" />

        <Button
            android:id="@+id/bv1"
            android:layout_marginTop="7sp"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:text="10 minutes workout"
            android:background="@drawable/edit1"
            android:textColor="@color/cardview_light_background"/>

        <Button
            android:layout_marginTop="20sp"
            android:id="@+id/bv2"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:text="20 minutes workout"
            android:background="@drawable/edit1"
            android:textColor="@color/cardview_light_background"/>

        <Button
            android:layout_marginTop="20sp"
            android:id="@+id/bv3"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:text="30 minutes workout"
            android:background="@drawable/edit1"
            android:textColor="@color/cardview_light_background"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_marginTop="30sp"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_light_background"
            android:text="Intermediate and High level exercises-keeping going!!" />

        <Button
            android:layout_marginTop="7sp"
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:text="Full body workout at home"
            android:background="@drawable/edit2"
            android:textColor="@color/cardview_light_background"
            />

        <Button
            android:id="@+id/iv2"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:text="20 minutes workout"
            android:background="@drawable/edit2"
            android:textColor="@color/cardview_light_background"
            />

        <Button
            android:id="@+id/iv3"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:text="10 minutes workout-leg,but,thigh"
            android:background="@drawable/edit2"
            android:textColor="@color/cardview_light_background"/>

        <TextView
            android:id="@+id/textView11"
            android:textColor="@color/cardview_light_background"
            android:layout_marginTop="30sp"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We got some more for you.." />

        <Button
            android:layout_marginTop="7sp"
            android:id="@+id/e1"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:text="7 exercises for flat stomach"
            android:background="@drawable/edit1"
            android:textColor="@color/cardview_light_background"/>

        <Button
            android:layout_marginTop="20sp"
            android:id="@+id/e2"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:text="Top 10 Morning Exercises"
            android:background="@drawable/edit1"
            android:textColor="@color/cardview_light_background"/>

        <Button
            android:id="@+id/e3"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:background="@drawable/edit1"
            android:textColor="@color/cardview_light_background"
            android:text="8 Best Exercises for Women Over 40's" />

        <Button
            android:layout_marginTop="20sp"
            android:id="@+id/e4"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:background="@drawable/edit1"
            android:textColor="@color/cardview_light_background"
            android:text="Quick Fix Yoga-Shilpa Shetty" />

        <Button
            android:layout_marginTop="20sp"
            android:id="@+id/e5"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:background="@drawable/edit1"
            android:textColor="@color/cardview_light_background"
            android:text="Pregnancy Workout" />
        <TextView
            android:id="@+id/yt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_light_background"
            android:text="For more such videos you can visit youtube" />

        <Button
            android:id="@+id/yt"
            android:layout_width="90sp"
            android:layout_height="30sp"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="170sp"
            android:background="@drawable/yt"/>
    </LinearLayout>
</ScrollView>