<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic3"
    tools:context=".diabetes">


    <TextView
        android:id="@+id/bmitv"

        android:layout_width="250sp"
        android:layout_height="70sp"
        android:gravity="center"
        android:text="CHECK BP"

        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />


    <EditText
        android:id="@+id/lowerev"

        android:layout_width="250sp"
        android:layout_height="70sp"
        android:layout_marginStart="32sp"

        android:layout_marginTop="10sp"
        android:layout_marginEnd="32sp"
        android:background="@android:drawable/spinner_background"
        android:ems="10"
        android:hint="Lower BP "
        android:textColorHighlight="@color/common_google_signin_btn_text_dark_focused"
        android:textColorHint="@color/cardview_dark_background"
        android:textSize="30sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/higherev"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/higherev"

        android:layout_width="260sp"
        android:layout_height="70sp"
        android:layout_marginStart="32sp"
        android:layout_marginEnd="32sp"
        android:background="@android:drawable/spinner_background"

        android:ems="10"
        android:hint="Higher BP"
        android:textColorHint="@color/cardview_dark_background"
        android:inputType="numberDecimal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColorHighlight="@color/common_google_signin_btn_text_dark_focused"
       android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.199" />

    <Button
        android:id="@+id/okbtn3"


        android:layout_width="95sp"
        android:layout_height="58sp"
        android:layout_marginTop="39sp"

        android:text="OK"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:background="@drawable/edit7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lowerev"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/bpresult"
        android:layout_width="346dp"
        android:layout_height="64dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:alpha="0.7"
        android:background="@drawable/edit"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.635" />

    <TextView
        android:id="@+id/bplresult"
        android:layout_width="345dp"
        android:layout_height="71dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:alpha="0.7"
        android:background="@drawable/edit"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.756" />

    <Button
        android:id="@+id/symtombpbtn"

        android:layout_width="250sp"
        android:layout_height="60sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/edit3"
        android:text="CLICK TO CHECK ON THE BASIS OF SYMTOMS"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lowerev"
        app:layout_constraintVertical_bias="0.87" />


</androidx.constraintlayout.widget.ConstraintLayout>