<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bpsymtom">

    <TextView
        android:id="@+id/pc"
        android:layout_width="370dp"
        android:layout_height="67dp"
        android:gravity="center"
        android:text="BP ALERT"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/resultpcod"
        android:layout_width="389dp"
        android:layout_height="107dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="93dp"
        android:alpha="0.95"
        android:background="?android:attr/colorFocusedHighlight"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textColorHighlight="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/okbtn2" />

    <Button
        android:id="@+id/okbtn2"
        android:layout_width="99dp"
        android:layout_height="61dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="152dp"
        android:text="OK "
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/resultpcod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="374dp"
        android:layout_height="264dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/okbtn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pc">

        <CheckBox
            android:id="@+id/checkBox1"

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:checked="false"
            android:text="blood in urine/nosebleeeds"
            android:textColor="@color/common_google_signin_btn_text_light_pressed"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="292dp" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:checked="false"
            android:text="visual changes/chest pains"
            android:textColor="@color/common_google_signin_btn_text_light_pressed"
            android:textSize="30sp" />

        <CheckBox
            android:id="@+id/checkBox3"

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:checked="false"
            android:text="Short of breadth/headaches"
            android:textColor="@color/common_google_signin_btn_text_light_pressed"
            android:textSize="30sp" />
    </LinearLayout>








</androidx.constraintlayout.widget.ConstraintLayout>