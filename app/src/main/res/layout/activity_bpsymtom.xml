<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ageRelated.bpsymtom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:typeface="serif"
        android:textSize="35sp"
        android:layout_marginTop="0sp"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:text="BP Alert"
        android:gravity="bottom"
        android:background="@drawable/bk1"

        />

        <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="374dp"
        android:layout_height="264dp"
        android:layout_marginStart="16dp"

        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       >

        <CheckBox

            android:typeface="serif"
            android:id="@+id/checkBox1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Blood in urine/nosebleeeds"
            android:textColor="@color/Olive"
            android:textSize="20sp"
            android:layout_marginTop="30sp"
        />

        <CheckBox
            android:id="@+id/checkBox2"

            android:typeface="serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Visual changes/chest pains"
            android:textColor="@color/Olive"
            android:textSize="20sp"
            android:layout_marginTop="10sp"/>

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"

            android:typeface="serif"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Short of breath/headaches"
            android:textColor="@color/Olive"
            android:textSize="20sp" />

            <Button
                android:id="@+id/okbtn2"
                android:layout_width="80sp"
                android:layout_height="35sp"
                android:layout_marginStart="140sp"
                android:typeface="serif"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="152dp"
                android:background="@drawable/button3"
                android:foreground="?attr/selectableItemBackground"
                android:text="OK "
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="20sp" />

            <TextView
            android:id="@+id/resultpcod"
            android:typeface="serif"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:textAlignment="center"
            android:inputType="textMultiLine"
                android:textColor="@color/green"
            android:textSize="18sp"
          />
    </LinearLayout>

    </LinearLayout>>
</ScrollView>