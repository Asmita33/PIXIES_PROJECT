<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calcium">




    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="283dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="3dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.718"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.318">

        <CheckBox
            android:id="@+id/checkBox3"

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:checked="false"
            android:text="Inverted/flaky Nipples"
            android:textColor="@color/common_google_signin_btn_text_light_pressed"
            android:textSize="30sp" />

        <CheckBox
            android:id="@+id/checkBox1"

            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:checked="false"
            android:text="Lumps/irritation in breasts/underarm"
            android:textColor="@color/common_google_signin_btn_text_light_pressed"
            android:textSize="30sp" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:checked="false"
            android:text="Nipple Discharge/pain/redness"
            android:textColor="@color/common_google_signin_btn_text_light_pressed"
            android:textSize="30sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/pc"
        android:layout_width="392dp"
        android:layout_height="102dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="11dp"
        android:gravity="center"
        android:text="BREAST CANCER ALERT"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultpcod"
        android:layout_width="347dp"
        android:layout_height="108dp"
        android:layout_marginTop="512dp"
        android:alpha="0.95"
        android:background="?android:attr/colorFocusedHighlight"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textColorHighlight="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/okbtn2"
        android:layout_width="122dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:text="OK "
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/resultpcod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />


</androidx.constraintlayout.widget.ConstraintLayout>