<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edit5"
    tools:context=".diabetes">


    <TextView
        android:id="@+id/bmitv"

        android:layout_width="477sp"
        android:layout_height="73sp"
        android:textSize="40sp"
        android:textAlignment="center"
               android:text="DIABETES CHECK "
        android:textColor="@color/common_google_signin_btn_text_dark_default"
 />


    <EditText
        android:id="@+id/fastingsugartv"
android:layout_marginTop="100sp"
        android:hint="Fasting Blood Sugar"
        android:layout_width="434dp"
        android:layout_height="80dp"
        android:background="@drawable/edit3"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginLeft="20sp"
 />

    <EditText
        android:id="@+id/regularsugartv"
        android:layout_marginTop="180sp"
        android:hint="Regular Blood Sugar"
android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_width="410dp"
        android:layout_height="80sp"
        android:layout_marginLeft="20sp"
        android:background="@drawable/edit3"
        android:ems="10"
        android:textSize="30sp"
        android:textAlignment="center"
/>

    <Button
        android:id="@+id/okbtn4"
        android:layout_width="90sp"
        android:layout_height="50sp"
        android:text="OK"
        android:layout_marginLeft="160sp"
        android:layout_marginTop="280sp"
        android:background="@drawable/edit7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.577" />


    <TextView
        android:id="@+id/dresult"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:alpha="0.7"
        android:ems="50"
        android:textSize="30dp"
        android:gravity="center"
android:layout_marginTop="350sp"
        android:background="@drawable/edit"

        android:layout_marginLeft="20sp"
        app:layout_constraintHorizontal_bias="0.5"
 />

    <TextView
        android:id="@+id/d1result"
        android:layout_width="361dp"
        android:layout_height="67dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="420sp"
        android:layout_marginEnd="25dp"
        android:alpha="0.7"
        android:background="@drawable/edit"
        android:ems="50"
        android:gravity="center"
        android:textSize="30dp" />

    <Button
        android:id="@+id/symtombdn"
android:layout_marginTop="500sp"
        android:layout_marginLeft="90sp"
        android:layout_width="256sp"
        android:layout_height="73sp"
        android:background="@drawable/edit7"
        android:text="CLICK TO CHECK ON THE BASIS OF SYMTOMS"
 />


</RelativeLayout>

