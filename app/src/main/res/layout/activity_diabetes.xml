<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ageRelated.diabetes">



    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:textSize="35sp"
        android:typeface="serif"
        android:layout_marginTop="0sp"
        android:gravity="bottom"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:text="Diabetes Check"
        android:background="@drawable/bk1"
        />
    <EditText
        android:typeface="serif"
        android:id="@+id/fastingsugartv"
        android:layout_marginTop="220sp"
        android:hint="Fasting Blood Sugar"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginLeft="10sp"
        android:alpha="0.9"
        android:textColor="@color/green"
        android:background="@android:drawable/spinner_background"
        android:textAlignment="center"
        android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="20sp" />

    <EditText
        android:typeface="serif"
        android:id="@+id/regularsugartv"
        android:layout_below="@id/fastingsugartv"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:background="@android:drawable/spinner_background"
        android:ems="10"

        android:hint="Regular Blood Sugar"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="20sp" />

    <Button
        android:typeface="serif"
        android:id="@+id/okbtn4"
        android:layout_width="85sp"
        android:layout_height="45sp"
        android:layout_marginLeft="140sp"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="20sp"
        android:background="@drawable/button3"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:text="OK"
        android:layout_below="@id/regularsugartv"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.577" />


    <TextView
        android:id="@+id/dresult"
        android:typeface="serif"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:alpha="0.7"
        android:ems="50"
        android:textSize="20sp"
        android:textColor="@color/Olive"
        android:gravity="center"
        android:layout_below="@id/okbtn4"
        android:layout_marginTop="5sp"
        app:layout_constraintHorizontal_bias="0.5" />


    <TextView
        android:id="@+id/d1result"
        android:typeface="serif"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@id/dresult"
        android:textColor="@color/Olive"
        android:layout_marginTop="5sp"
        android:alpha="0.7"
    />

    <Button
        android:typeface="serif"
        android:id="@+id/symtombdn"
        android:layout_width="match_parent"
        android:layout_height="73sp"
        android:layout_marginTop="20sp"
        android:layout_below="@id/d1result"
        android:foreground="?attr/selectableItemBackground"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:background="@drawable/button3"
        android:text="CLICK TO CHECK ON THE BASIS OF SYMPTOMS" />


</RelativeLayout>

