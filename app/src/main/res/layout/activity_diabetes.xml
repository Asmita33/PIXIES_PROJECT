<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edit5"
    tools:context=".diabetes">


    <TextView
        android:id="@+id/bmitv"
        android:layout_width="477sp"
        android:layout_height="73sp"
        android:textAlignment="center"
               android:text="DIABETES CHECK "
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/fastingsugartv"
        android:layout_width="434dp"
        android:layout_height="85dp"
        android:background="@drawable/edit3"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginLeft="20sp"
        android:ems="10"
        android:hint="Fasting sugar level"
        android:inputType="numberDecimal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.527" />


    <EditText
        android:id="@+id/regularsugartv"
        android:layout_width="410dp"
        android:layout_height="94dp"
        android:background="@drawable/edit3"
        android:ems="10"
        android:textSize="30sp"
        android:textAlignment="center"
        android:hint="Regular sugar level"
        android:inputType="numberDecimal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintBottom_toBottomOf="@+id/fastingsugartv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.641" />

    <Button
        android:id="@+id/okbtn4"
        android:layout_width="90sp"
        android:layout_height="50sp"
        android:text="OK"
        android:background="@drawable/edit7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.657" />

    <TextView
        android:id="@+id/dresult"
        android:layout_width="410dp"
        android:layout_height="63dp"
        android:alpha="0.7"
        android:background="@drawable/edit"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="20sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.799" />


    <TextView
        android:id="@+id/d1result"
        android:layout_marginLeft="20sp"
        android:layout_width="410dp"
        android:layout_height="63dp"
        android:alpha="0.7"
        android:background="@drawable/edit"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.897" />


    <Button
        android:id="@+id/symtombdn"
        android:layout_width="256sp"
        android:layout_height="73sp"
        android:background="@drawable/edit7"
        android:text="CLICK TO CHECK ON THE BASIS OF SYMTOMS"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149" />



</androidx.constraintlayout.widget.ConstraintLayout>

